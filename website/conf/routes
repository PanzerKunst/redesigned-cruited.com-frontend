# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)

# Pages
GET     /                                           controllers.Application.index
GET     /products                                   controllers.Application.productSelection
GET     /auth/linkedin/callback                     controllers.Application.linkedinCallback

# API
POST    /api/db/re-create-tables                    controllers.api.DbAdminApi.reCreateTables
GET     /api/coupons/:code                          controllers.api.CouponApi.get(code: String)
